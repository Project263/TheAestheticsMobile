{
  "extends": "expo/tsconfig.base",
  "include": ["src", "./custom.d.ts", "./App.tsx"],
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@Navigation/*": ["src/navigation/*"],
      "@Components/*": ["src/components/*"],
      "@Screens/*": ["src/screens/*"],
      "@Stores/*": ["src/stores/*"],
      "@Assets/*": ["assets/*"]
    }
  }
}
